<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activities.ReservationDetailsActivity">

    <Button
        android:id="@+id/btnCancelReservation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="CANCELAR RESERVACION"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lblReservationRestaurantAddress" />

    <TextView
        android:id="@+id/lblReservationTime"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:text="Time"
        android:layout_margin="16dp"
        android:textSize="24sp"
        app:layout_constraintTop_toBottomOf="@id/lblReservationDate"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5" />

    <TextView
        android:id="@+id/lblReservationPeople"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:text="People"
        android:textSize="24sp"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/lblReservationTime"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5" />

    <TextView
        android:id="@+id/lblReservationStatus"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:text="Status"
        android:layout_margin="16dp"
        android:textSize="24sp"
        app:layout_constraintTop_toBottomOf="@id/lblReservationPeople"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5" />

    <TextView
        android:id="@+id/lblReservationRestaurantName"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:text="Restaurant Name"
        android:layout_margin="16dp"
        android:textSize="24sp"
        app:layout_constraintTop_toBottomOf="@id/lblReservationStatus"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5" />

    <TextView
        android:id="@+id/lblReservationRestaurantAddress"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:text="Restaurant Address"
        android:textSize="24sp"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/lblReservationRestaurantName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5" />

    <TextView
        android:id="@+id/lblReservationDate"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_margin="16dp"
        android:text="Date"
        android:textSize="26sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>

